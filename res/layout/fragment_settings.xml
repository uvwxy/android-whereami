<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/CardRootSV">
  <LinearLayout style="@style/CardRootLL">
    <LinearLayout style="@style/CardBodyLL">
      <TextView
        style="@style/CardTitle"
        android:text="@string/settings_location"/>
      <View style="@style/CardHR"/>
      <CheckBox
        style="@style/CardTextNormal"
        android:id="@+id/cbStartUpdates"
        android:text="@string/onstartupdates"/>
      <CheckBox
        style="@style/CardTextNormal"
        android:id="@+id/cbStopUpdates"
        android:text="@string/backgroundupdates"/>
      <View style="@style/CardHR"/>
      <TextView
        style="@style/CardText"
        android:id="@+id/textView1"
        android:text="@string/settingsapprestart"/>
      <CheckBox
        style="@style/CardTextNormal"
        android:id="@+id/cbUseGPS"
        android:text="@string/settingusegps"/>
      <CheckBox
        style="@style/CardTextNormal"
        android:id="@+id/cbUseNetwork"
        android:text="@string/settingusenetwork"/>
    </LinearLayout>
    <LinearLayout style="@style/CardBodyLL">
      <TextView
        style="@style/CardTitle"
        android:id="@+id/textView2"
        android:text="@string/selectunitbelow"/>
      <View style="@style/CardHR"/>
      <TextView
        style="@style/CardText"
        android:id="@+id/textView3"
        android:text="@string/distances"/>
      <RadioGroup
        android:id="@+id/rbgLengths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbMetres"
          android:checked="true"
          android:text="@string/unit_metres"/>
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbKilometres"
          android:text="@string/unit_km"/>
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbFoot"
          android:text="@string/unit_foot"/>
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbMiles"
          android:text="@string/unit_miles"/>
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbYards"
          android:text="@string/unit_yards"/>
      </RadioGroup>
      <View style="@style/CardHR"/>
      <TextView
        style="@style/CardText"
        android:id="@+id/textView4"
        android:text="@string/velocities"/>
      <RadioGroup
        android:id="@+id/rbgVelocities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbMetresPerSecond"
          android:checked="true"
          android:text="@string/uni_mpers"/>
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbKMH"
          android:text="@string/unit_kmh"/>
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbMPH"
          android:text="@string/unit_mph"/>
      </RadioGroup>
      <View style="@style/CardHR"/>
      <TextView
        style="@style/CardText"
        android:id="@+id/textView5"
        android:text="@string/angles"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
      <RadioGroup
        android:id="@+id/rbgAngles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbAngleDegrees"
          android:checked="true"
          android:text="@string/example_degree"/>
        <RadioButton
          style="@style/CardTextNormal"
          android:id="@+id/rbAngleDegreesMinutesSeconds"
          android:text="@string/example_dms"/>
      </RadioGroup>
    </LinearLayout>
  </LinearLayout>
</ScrollView>