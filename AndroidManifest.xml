<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="10"
    android:versionName="2.0.2"
    package="de.uvwxy.whereami" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:debuggable="false" android:allowClearUserData="true" android:restoreAnyVersion="true">

        <activity
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:label="@string/app_name"
            android:name="de.uvwxy.whereami.ActivityMain"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="de.uvwxy.soundfinder.SoundFinder" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
        <activity android:name="de.uvwxy.cardpager.ActivityLicenseDisplay" android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>
    </application>

</manifest>